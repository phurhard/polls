# =====================================================
# POLLS APPLICATION ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env.local and fill in your actual values

# =====================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =====================================================
# Get these values from your Supabase project dashboard
# Settings â†’ API

# Your Supabase project URL (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anon key - safe to use in frontend (REQUIRED)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# Supabase service role key - for server-side operations (OPTIONAL)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# Supabase project ID (OPTIONAL)
SUPABASE_PROJECT_ID=your-project-ref

# =====================================================
# APPLICATION CONFIGURATION (OPTIONAL)
# =====================================================

# Application name displayed in UI
NEXT_PUBLIC_APP_NAME=Polls App

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=development

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =====================================================
# FEATURE FLAGS (OPTIONAL)
# =====================================================

# Enable user registration
NEXT_PUBLIC_ENABLE_REGISTRATION=true

# Enable poll categories
NEXT_PUBLIC_ENABLE_CATEGORIES=true

# Enable real-time updates
NEXT_PUBLIC_ENABLE_REALTIME=false

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =====================================================
# API CONFIGURATION (OPTIONAL)
# =====================================================

# Default number of items per page
API_DEFAULT_PAGE_SIZE=20

# Maximum number of items per page
API_MAX_PAGE_SIZE=100

# Rate limiting - requests per window
API_RATE_LIMIT_REQUESTS=100

# Rate limiting - window duration in seconds (900 = 15 minutes)
API_RATE_LIMIT_WINDOW=900

# =====================================================
# SECURITY CONFIGURATION (OPTIONAL)
# =====================================================

# JWT secret for token signing (for custom auth)
JWT_SECRET=your-jwt-secret-here

# Session timeout in seconds (86400 = 24 hours)
SESSION_TIMEOUT=86400

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in seconds (900 = 15 minutes)
LOCKOUT_DURATION=900

# Supabase service role key (NEVER expose in frontend - server-side only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# =====================================================
# OPTIONAL: LOCAL DEVELOPMENT
# =====================================================
# For Supabase CLI local development
SUPABASE_PROJECT_ID=your-project-ref

# Local Supabase URLs (when running supabase start)
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6ImFub24iLCJleHAiOjE5ODM4MTI5OTZ9.CRXP1A7WOeoJeXxjNni43kdQwgnWNReilDMblYTn_I0

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
# Next.js environment
NEXT_ENV=development

# Application URL (for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =====================================================
# SECURITY
# =====================================================
# JWT Secret for additional security (optional)
JWT_SECRET=your-super-secret-jwt-key-here

# NextAuth.js secret (if using NextAuth instead of Supabase auth)
# NEXTAUTH_SECRET=your-nextauth-secret-here
# NEXTAUTH_URL=http://localhost:3000

# =====================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =====================================================
# Email service (if using custom email provider)
# EMAIL_FROM=noreply@yourapp.com
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password

# File upload service (if using custom storage)
# UPLOAD_MAX_SIZE=5242880
# ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Analytics (if using third-party analytics)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your-mixpanel-token

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# =====================================================
# RATE LIMITING
# =====================================================
# API rate limiting (requests per minute)
RATE_LIMIT_POLLS_CREATE=10
RATE_LIMIT_VOTES_CAST=60
RATE_LIMIT_USER_ACTIONS=100

# =====================================================
# NOTES
# =====================================================
# 1. NEVER commit .env.local or .env files to version control
# 2. Keep your service role key secure - it has admin access
# 3. Use different Supabase projects for development/staging/production
# 4. Rotate your keys regularly for security
# 5. Test your configuration with: npm run dev
